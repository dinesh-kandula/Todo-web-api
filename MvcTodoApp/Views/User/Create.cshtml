@model MvcTodoApp.Models.Custom;

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<body>

    <h4>Create User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="User.Name" class="control-label">Name</label>
                    <input asp-for="User.Name" class="form-control" />
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Credential.Username" class="control-label"></label>
                    <input asp-for="Credential.Username" class="form-control" />
                    <span asp-validation-for="Credential.Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Credential.EmailId" class="control-label"></label>
                    <input asp-for="Credential.EmailId" class="form-control" type="email" />
                    <span asp-validation-for="Credential.EmailId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Credential.Password" class="control-label"></label>
                    <input asp-for="Credential.Password" class="form-control" type="password" />
                    <span asp-validation-for="Credential.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.DOB" class="control-label"></label>
                    <input type="date" asp-for="User.DOB" class="form-control" />
                    <span asp-validation-for="User.DOB" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.Gender" class="form-label"></label>
                    <select asp-for="User.Gender" class="form-select" asp-items="Html.GetEnumSelectList<TodoModels.Models.Gender>()">
                        <option value="">Select Gender</option>
                    </select>
                    <span class="text-danger" asp-validation-for="User.Gender"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.ImageFile" class="control-label"></label>
                    <input asp-for="User.ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="User.ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
